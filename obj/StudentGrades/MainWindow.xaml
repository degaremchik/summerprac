<Window x:Class="StudentGrades.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:StudentGrades"
        mc:Ignorable="d"
        Title="StudentGrades" Height="450" Width="800" Topmost="True">
    <Grid Background="#FF1E1E1E">

        <Button x:Name="buttonOpen" Content="Open Json File" HorizontalAlignment="Left" Margin="5,5,0,0" VerticalAlignment="Top" Width="100"  Background="#FF686868" Foreground="#FFC5C5C5" Height="25" Click="ButtonOpen_Click" />
        <DataGrid x:Name="dataGrid" Margin="0,35,0,0" Foreground="Black" BorderBrush="#FF686868" Background="#FF2D2D30" Grid.ColumnSpan="2" Opacity="0.85"/>
        <Label x:Name="label" Content="" HorizontalAlignment="Left" Margin="243,5,0,0" VerticalAlignment="Top" Height="25" Foreground="#FF00FF0C" Width="342"/>
        <Button x:Name="buttonSave" Content="Save to EXCEL File" HorizontalAlignment="Left" Margin="115,5,0,0" VerticalAlignment="Top" Width="111"  Background="#FF686868" Foreground="#FFC5C5C5" Height="25" Click="ButtonSave_Click" />
        <ProgressBar x:Name="progressbar" HorizontalAlignment="Right" Height="25" Margin="5" VerticalAlignment="Top" Width="150"/>

    </Grid>
</Window>
